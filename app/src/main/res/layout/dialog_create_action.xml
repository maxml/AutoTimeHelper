<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/s_action_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/bet_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/s_action_type"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="description"
        bootstrapbutton:roundedCorners="true" />


    <LinearLayout
        android:id="@+id/ll_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bet_description"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/bet_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/s_action_type"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:cursorVisible="false"
            android:ems="10"
            android:focusableInTouchMode="false"
            android:gravity="center_horizontal"
            android:hint="start time"
            android:inputType="none"
            bootstrapbutton:roundedCorners="true" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/bet_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/s_action_type"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:cursorVisible="false"
            android:ems="10"
            android:focusableInTouchMode="false"
            android:gravity="center_horizontal"
            android:hint="end time"
            android:inputType="none"
            bootstrapbutton:roundedCorners="true" />

    </LinearLayout>

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/bet_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_time"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:cursorVisible="false"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:gravity="center_horizontal"
        android:hint="date"
        android:inputType="none"
        bootstrapbutton:roundedCorners="true" />

</RelativeLayout>