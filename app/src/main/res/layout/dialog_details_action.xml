<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <Spinner
            android:id="@+id/s_action_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/bet_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/s_action_type"
            android:layout_margin="8dp"
            android:clickable="true"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Description"
            bootstrapbutton:roundedCorners="true" />

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bet_description"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/bet_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:hint="10:50"
                android:inputType="none"
                bootstrapbutton:roundedCorners="true" />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/bet_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:hint="11:00"
                android:inputType="none"
                bootstrapbutton:roundedCorners="true" />

        </LinearLayout>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/bb_show_path_in_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_time"
            android:layout_margin="8dp"
            android:layout_marginLeft="128dp"
            android:layout_marginRight="128dp"
            android:enabled="true"
            android:text="Show path"
            android:visibility="gone"
            bootstrapbutton:bootstrapBrand="primary"
            bootstrapbutton:bootstrapSize="lg"
            bootstrapbutton:roundedCorners="true" />


