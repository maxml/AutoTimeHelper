<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- my own styles -->

    <style name="MyObject">
        <item name="android:layout_margin">@dimen/size_4</item>
    </style>

    <style name="MyObject.Header">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/bigTextSize</item>
    </style>

    <style name="MyObject.Content">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:paddingLeft">@dimen/size_8</item>
    </style>

    <style name="MyLayout">
        <item name="android:background">@drawable/my_layout_shape_colored</item>
    </style>

</resources>
